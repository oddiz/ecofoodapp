{
    "compilerOptions": {
        "outDir": "./temp/",

        "module": "esnext",
        "target": "es6",

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2016", "esnext", "DOM", "DOM.Iterable"],
        "noImplicitAny": true,
        "sourceMap": false,

        "moduleResolution": "Node",
        "allowJs": false,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
